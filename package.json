{
  "name": "cypress_mocha_framework",
  "version": "1.0.0",
  "description": "Cypress + Mochawesome reporting integrated framework",
  "main": "index.js",
  "scripts": {
    "clean": "npx rimraf cypress/reports cypress/screenshots cypress/videos",
    "cypress:run": "npx cypress run --reporter mochawesome --reporter-options reportDir=cypress/reports,overwrite=false,html=false,json=true",
    "merge-reports": "node merge-reports.cjs",
    "generate-report": "npx mochawesome-report-generator cypress/reports/output.json -f index -o cypress/reports",
    "open-report": "start cypress/reports/index.html",
    "test:report": "npm run clean && npm run cypress:run && npm run merge-reports && npm run generate-report && npm run open-report",
    "test:clean": "npm run clean && npm run test:report",
    "open": "npx cypress open"
  },
  "keywords": ["cypress", "automation", "mochawesome", "reporting"],
  "author": "Abhinandan Hongal",
  "license": "ISC",
  "devDependencies": {
    "cypress": "^13.17.0",
    "marge": "^1.0.1",
    "mochawesome": "^7.1.4",
    "mochawesome-merge": "^5.0.0",
    "mochawesome-report-generator": "^6.3.2",
    "rimraf": "^5.0.10"
  }
}
